{
  "overrides": [
    {
      "files": [
        "**/*.js",
        "src/cli/**/*.ts",
        "src/config/**/*.ts",
        "src/env/**/*.ts",
        "src/error/**/*.ts",
        "src/parser/**/*.ts",
        "src/utils/**/*.ts",
        "test/unit/cli/**/*.ts",
        "test/unit/config/**/*.ts",
        "test/unit/env/**/*.ts",
        "test/unit/error/**/*.ts",
        "test/unit/parser/**/*.ts",
        "test/unit/utils/**/*.ts"
      ],
      "extends": [
        "@apeframework"
      ],
      "plugins": [
        "@stylistic",
        "import"
      ],
      "rules": {
        "capitalized-comments": [
          "error",
          "never"
        ],
        "guard-for-in": [
          "off"
        ],
        "id-length": [
          "off"
        ],
        "init-declarations": [
          "off"
        ],
        "no-undef-init": [
          "off"
        ]
      },
      "overrides": [
        {
          "files": [
            "**/*.ts"
          ],
          "plugins": [
            "@typescript-eslint"
          ],
          "rules": {
            "@typescript-eslint/init-declarations": [
              "off"
            ],
            "@typescript-eslint/naming-convention": [
              "off"
            ],
            "@typescript-eslint/no-unsafe-assignment": [
              "off"
            ],
            "@typescript-eslint/prefer-nullish-coalescing": [
              "off"
            ],
            "@typescript-eslint/prefer-readonly-parameter-types": [
              "off"
            ]
          },
          "overrides": [
            {
              "files": [
                "**/*.spec.ts"
              ],
              "plugins": [
                "jest"
              ],
              "rules": {
                "jest/prefer-lowercase-title": [
                  "error"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}