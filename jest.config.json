{
  "preset": "ts-jest",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testMatch": [
    "<rootDir>/test/unit/**/*.spec.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ]
}
