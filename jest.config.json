{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleDirectories": [
    "<rootDir>",
    "node_modules"
  ],
  "testMatch": [
    "**/*.spec.ts"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "**/*.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "lcov",
    "text"
  ]
}
