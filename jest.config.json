{
  "preset": "ts-jest",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testMatch": [
    "<rootDir>/test/unit/config/**/*.spec.ts",
    "<rootDir>/test/unit/env/**/*.spec.ts",
    "<rootDir>/test/unit/error/**/*.spec.ts",
    "<rootDir>/test/unit/parser/**/*.spec.ts",
    "<rootDir>/test/unit/utils/**/*.spec.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "collectCoverageFrom": [
    "<rootDir>/src/config/**/*.ts",
    "<rootDir>/src/env/**/*.ts",
    "<rootDir>/src/error/**/*.ts",
    "<rootDir>/src/parser/**/*.ts",
    "<rootDir>/src/utils/**/*.ts"
  ]
}