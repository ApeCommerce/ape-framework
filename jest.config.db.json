{
  "preset": "ts-jest",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testMatch": [
    "<rootDir>/test/integration/db/**/timestamp.spec.ts"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "<rootDir>/src/db/index.ts"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/db/index.ts",
    "<rootDir>/src/db/config.ts",
    "<rootDir>/src/db/schema/config.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  }
}
